<div class="page-header">
  <h1>Users</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
       <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>

        <% if user.type == '0' %>
        <td>"Requestor"</td>
        <% else %>
        <td>"Supplier"</td>
        <% end %>
           </tr>
    <% end %>
  </tbody>
</table>

